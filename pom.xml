  </repositories>

  <distributionManagement>
    <repository>
      <id>releases</id>
      <name>demo-devcon-2017-releases</name>
      <url>http://artifactory.devcon2017.site/artifactory/releases</url>
    </repository>
    <snapshotRepository>
      <id>snapshots</id>
      <name>demo-devcon-2017-snapshots</name>
